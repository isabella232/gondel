{
  "name": "gondel",
  "version": "0.0.3",
  "private": true,
  "description": "Gondel Monorepo",
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "build": "lerna run build",
    "clean": "npx --ignore-existing --quiet npm-run-all clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:lock": "rimraf **/package-lock.json",
    "clean:modules": "npx --ignore-existing --quiet rimraf node_modules",
    "contributors": "npx all-contributors-cli generate",
    "commit": "git-cz",
    "postinstall": "npm run bootstrap",
    "prettier": "prettier --write **/src/**/*.{ts,tsx}",
    "posttest": "prettier --list-different **/src/**/*.{ts,tsx}",
    "size": "npm run build && size-limit",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "release": "lerna publish --conventional-commits --no-commit-hooks",
    "update-dependencies": "npm-run-all --parallel update-dependencies:*",
    "update-dependencies:packages": "lerna exec -- npm-check-updates -u",
    "update-dependencies:root": "npm-check-updates -u"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/src/**/*.(ts|tsx)": [
      "prettier --list-different"
    ]
  },
  "commitlint": {
    "extends": [
      "@namics/commitlint-conventional-changelog"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "name": "@gondel/core",
      "limit": "3 KB",
      "path": "./packages/core/dist/index.js"
    },
    {
      "name": "@gondel/core es5",
      "limit": "3 KB",
      "path": "./packages/core/dist/gondel.es5.js"
    }
  ],
  "devDependencies": {
    "commitizen": "4.0.3",
    "@commitlint/cli": "8.2.0",
    "@namics/commitlint-conventional-changelog": "1.1.11",
    "@size-limit/preset-small-lib": "2.2.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.1.0",
    "lerna": "3.19.0",
    "lint-staged": "9.5.0",
    "npm-check-updates": "4.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "standard-version": "7.0.1"
  }
}
